{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/main",
    "outDir": "/dist/electron"
  },
  "include": ["./src/main/**/*", "./src/preload/**/*"]
}
