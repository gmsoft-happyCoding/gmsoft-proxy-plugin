{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "target": "ES5",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
