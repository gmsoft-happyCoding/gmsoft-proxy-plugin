{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES5",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
