{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "composite": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/main",
    "outDir": "./dist/electron",
    "types": ["node", "electron", "express"]
  },
  "include": ["./src/main/**/*", "./src/preload/**/*"]
}
